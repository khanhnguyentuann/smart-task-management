{
    "name": "@smart-task-management/root",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "concurrently --kill-others --prefix-colors \"blue,green\" --prefix \"[{name}]\" --names \"frontend,backend\" \"pnpm --filter @smart-task-management/frontend dev\" \"pnpm --filter @smart-task-management/backend start:dev:quiet\"",
        "dev:frontend": "pnpm --filter @smart-task-management/frontend dev",
        "dev:backend": "pnpm --filter @smart-task-management/backend start:dev",
        "build": "pnpm --filter @smart-task-management/frontend build && pnpm --filter @smart-task-management/backend build",
        "build:frontend": "pnpm --filter @smart-task-management/frontend build",
        "build:backend": "pnpm --filter @smart-task-management/backend build",
        "lint": "pnpm --filter @smart-task-management/frontend lint && pnpm --filter @smart-task-management/backend lint",
        "lint:frontend": "pnpm --filter @smart-task-management/frontend lint",
        "lint:backend": "pnpm --filter @smart-task-management/backend lint"
    },
    "devDependencies": {
        "concurrently": "^9.2.0"
    },
    "pnpm": {
        "overrides": {
            "tsconfig-paths": "^4.2.0"
        }
    }
}